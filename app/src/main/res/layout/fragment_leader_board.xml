<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFrag"
    android:weightSum="3"
    android:background="@drawable/leaderboard_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LeaderBoard"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:layout_margin="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:background="@color/black"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_width="@dimen/_30sdp"
                    card_view:cardCornerRadius="15dp"
                    android:layout_gravity="center"
                    card_view:cardPreventCornerOverlap="true">
                    <ImageView
                        android:id="@+id/imgTwo"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/leaderboard_four"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Anjali"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/pointTwo"
                    android:text="1521 points"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_crown"/>
                <androidx.cardview.widget.CardView
                    android:background="@color/black"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_width="@dimen/_30sdp"
                    card_view:cardCornerRadius="15dp"
                    android:layout_gravity="center"
                    card_view:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/img"
                    android:src="@drawable/leaderboard_four"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/name"
                    android:text="Anjali"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/point"
                    android:text="1521 points"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                android:background="@color/black"
                android:layout_height="@dimen/_30sdp"
                android:layout_width="@dimen/_30sdp"
                card_view:cardCornerRadius="15dp"
                android:layout_gravity="center"
                card_view:cardPreventCornerOverlap="true">
                <ImageView
                    android:id="@+id/imgThree"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/leaderboard_four"/>
            </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/nameThree"
                    android:text="Anjali"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/pointThree"
                    android:text="1521 points"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:background="@drawable/top_rounded_corner"
        android:numColumns="2"
        android:padding="2dp" />
</LinearLayout>